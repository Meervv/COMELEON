{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block body %}
<div class="container">
    <h1 style="text-align:center;">
        {% if editMode %}
            Modifier
        {% else %}
            Ajouter la prestation
        {% endif %}
    </h1>
    <br>
    {{ form_start(form) }}

    {{ form_row(form.title, {'attr': {'placeholder': "Titre de la prestation"}} ) }}

    {{ form_row(form.categorie) }}

    {{ form_row(form.description, {'attr': {'placeholder': "Description de la prestation"}} ) }}
   
    {{ form_row(form.img, {'attr': {'placeholder': "URL de l'image"}} ) }}

    {{form_row(form.price, {'attr': {'placeholder': "Prix de la prestation"}} ) }}

    <br>
    <button type="submit" class="btn btn-success">
        {% if editMode %}
            Enregistrer les modifications
        {% else %}
            Ajouter la prestation
        {% endif %}
    </button>

    {{ form_end(form) }}
</div>
{% endblock %}